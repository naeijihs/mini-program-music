/* pages/video/video.wxss */
.videoHeader{
  display: flex;
  padding: 10rpx;
}
.videoHeader image{
  width: 60rpx;
  height: 60rpx;
}
.videoSearch{
  border: 2rpx solid #DFDFDF;
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
  margin: 0 20rpx;
  color: #d43c33;
}
.videoScroll{
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.videoContentScroll{
  height: calc(100vh - 143.2rpx);
}
.videoNavItem{
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 54rpx;
  line-height: 54rpx;
}
.active{
  border-bottom: 1rpx solid #d43c33;
}
.videoItem{
  padding: 0 3%;
}
.videoItem video,image{
  width: 100%;
  height: 360rpx;
  border-radius: 6rpx;
}
.videoItem .content {
  padding-left: 10rpx;
  font-size: 26rpx;
  height:40rpx;
  line-height: 40rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}

